#!/usr/bin/env bash

# Sample usage:
# git-stats -j -d $work -i xml,js -o

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."
cd "$DIR"

# Scan build.sbt for Scala version and program version

SCALA_VERSION() {
  V=`grep "scalaVersion :=" build.sbt |  cut -d' ' -f 3 | tr -d \"`
   case $V in
    2.10.*) echo 2.10 ;;
    2.11.*) echo 2.11 ;;
    2.12.*) echo 2.12 ;;
    2.13.*) echo 2.13 ;;
     3.0.*)  echo 3.0 ;;
     3.1.*)  echo 3.1 ;;
         *) echo UNKNOWN ;;
  esac
}

VERSION="$( grep "version :=" build.sbt | cut -d' ' -f 3 | tr -d \" )"
JAR=target/scala-`SCALA_VERSION`/git-stats-scala-assembly-$VERSION.jar
#echo $JAR

# -j option forces rebuild of jar
if [ "$1" == -j ] || [ ! -f $JAR ]; then
  echo "Building $JAR"
  sbt assembly

  if [ "$1" == -j ]; then shift; fi
fi

# --help option gives usage
java -cp "$JAR" ProgStats "$@"
